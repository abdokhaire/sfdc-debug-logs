{
    "name": "Apex Debugger",
    "short_name": "Apex Debgr",
    "version": "0.4.1",
    "manifest_version": 2,
    "author": "Moti Korets",
    "icons": { "16": "16.png",
           "48": "48.png",
          "128": "128.png" },
    "description": "Debug Salesforce apex code with ease",
    "background":{
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_ui": {
      "page": "options.html",
      "chrome_style": true
    },
    "browser_action": {
      "default_icon": "16.png"
    },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "content_scripts": [
        {
            "css": [
                "debug.css"
            ],
            "matches": [
                "https://*.salesforce.com/p/setup/layout/ApexDebugLogDetailEdit/*"
            ],
            "js": [
                "mousetrap.min.js",
                "beautify.js",
                "beautify-html.js",
                "sfdc.debug.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*.salesforce.com/setup/ui/listApexTraces.apexp*"
            ],
            "js": [
                "sfdc.debug.btn.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*.force.com/*",
                "https://*.salesforce.com/*"
            ],
            "js": [
                "default_shortcuts.js",
                "mousetrap.min.js",
                "shortcuts.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*.salesforce.com/01p*",
                "https://*.salesforce.com/setup/build/allTriggers.apexp*"
            ],
            "js": [
                "sfdc.classes.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*.salesforce.com/05G*"
            ],
            "js": [
                "sfdc.net.access.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "https://*.force.com/*",
        "https://*.salesforce.com/*",
        "storage"
    ],
    "externally_connectable": {
      "matches": [
        "https://*.salesforce.com/*"]
    }
}
